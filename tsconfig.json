{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions":
  {
    "strict": true,
    "target": "ES2015",
    "removeComments": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
    "baseUrl": ".",
    "paths":
    {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "images/*": ["src/images/*"],
      "components/*": ["src/components/*"],
      "config/*": ["src/config/*"],
      "styles/*": ["src/styles/*"]
    }
	}
}